@{
}
@model Models.Tables.tbl_passenger

<h1>Loading Machine</h1>

<h4 id="h3-1" card-number="@Model.CardNumber">Your Card Number : @Model.CardNumber</h4>
<h4>Current Load : <label id="lblCurrentLoad">@Model.Balance</label></h4>
<form id="enrollment">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="txtMoney">Customer Money</label>
      <input type="number" min="100" step="any" max="10000" name="Money" class="form-control" id="txtMoney" placeholder="Money Amount">
    </div>

    <div class="form-group col-md-6">
      <label for="txtLoad">Amount to Load</label>
      <input type="number" min="100" step="any" max="10000" name="Load" class="form-control" id="txtLoad" placeholder="Load Amount">
    </div>
  </div>


  <a id="btn-load" class="btn btn-primary">Load</a>
  <label id="message"></label>

  <div class="card d-none" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Receipt</h5>
      <h6 class="card-subtitle mb-2 text-muted"></h6>
      <p class="card-text">Thank you for reloading!</p>
      <p class="card-text">New Balance: <b><label id="lblNewBalance"></label></b> </p>
      <p class="card-text">Amount Loaded : <b><label id="lblAmountLoaded"></label></b> </p>
      <p class="card-text">Customer Money : <b><label id="lblCustomerMoney"></label></b> </p>
      <p class="card-text">Change : <b><label id="lblChange"></label></b> </p>
      <hr />
    </div>
  </div>


</form>
<script src="~/js/Loadin/Loading.js"></script>